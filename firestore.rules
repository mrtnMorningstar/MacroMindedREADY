rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================
    // FIRESTORE SECURITY RULES
    // ============================================
    // 
    // Users Collection (/users/{userId}):
    //   - Users can read/write only their own document
    //   - Admins can read/write all user documents
    //   - Non-admins cannot modify restricted fields (mealPlanFileURL, mealPlanStatus, role, mealPlanDeliveredAt)
    //   - All writes are validated against schema and field types
    //
    // Purchases Collection (/purchases/{purchaseId}):
    //   - Users can only read/write their own purchases (where userId matches their auth.uid)
    //   - Admins can read/write all purchases
    //   - All writes are validated against schema and field types
    //   - Users cannot change the userId field on existing purchases
    //
    // Plan Update Requests Collection (/planUpdateRequests/{requestId}):
    //   - Users can create requests with their own userId
    //   - Users can read their own requests
    //   - Admins can read/write all requests
    //
    // Recipes Collection (/recipes/{recipeId}):
    //   - All signed-in users can read recipes
    //   - Only admins can create/update/delete recipes
    //
    // Webhook Events Collection (/webhook_events/{eventId}):
    //   - Only admins can read/write (primarily used by server-side admin SDK)
    //
    // Other Collections:
    //   - All other collections are denied by default
    // ============================================
    // Helper function: Check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function: Check if user is admin
    function isAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function: Check if user is accessing their own document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Helper function: Validate user document schema
    function isValidUserData() {
      let data = request.resource.data;
      let allowedFields = [
        'email',
        'displayName',
        'packageTier',
        'mealPlanStatus',
        'mealPlanFileURL',
        'mealPlanImageURLs',
        'profile',
        'estimatedMacros',
        'macroWizardCompleted',
        'mealPlanDeliveredAt',
        'groceryListURL',
        'referralCode',
        'referralCredits',
        'referredBy',
        'purchaseDate',
        'role',
        'createdAt'
      ];
      
      // Check that all keys in data are in the allowed fields list
      return data.keys().hasOnly(allowedFields);
    }

    // Helper function: Validate user field types
    function hasValidUserFieldTypes() {
      let data = request.resource.data;

      // base field validators remain
      return (!('email' in data) || data.email is string || data.email == null)
        && (!('displayName' in data) || data.displayName is string || data.displayName == null)
        && (!('packageTier' in data) || data.packageTier is string || data.packageTier == null)
        && (!('mealPlanStatus' in data) || data.mealPlanStatus is string || data.mealPlanStatus == null)
        && (!('mealPlanFileURL' in data) || data.mealPlanFileURL is string || data.mealPlanFileURL == null)
        && (!('mealPlanImageURLs' in data) || data.mealPlanImageURLs is list || data.mealPlanImageURLs == null)
        && (!('groceryListURL' in data) || data.groceryListURL is string || data.groceryListURL == null)
        && (!('referralCode' in data) || data.referralCode is string || data.referralCode == null)
        && (!('referredBy' in data) || data.referredBy is string || data.referredBy == null)
        && (!('referralCredits' in data) || data.referralCredits is int || data.referralCredits == null)
        && (!('role' in data) || data.role is string || data.role == null)
        && (!('mealPlanDeliveredAt' in data) || data.mealPlanDeliveredAt is timestamp || data.mealPlanDeliveredAt == null)
        && (!('createdAt' in data) || data.createdAt is timestamp || data.createdAt == null)
        && (!('purchaseDate' in data) || data.purchaseDate is timestamp || data.purchaseDate == null)
        && (!('profile' in data) 
            || (
              data.profile.activityLevel is string ||
              data.profile.goal is string ||
              data.profile.preferences is string ||
              data.profile.dietaryRestrictions is string ||
              data.profile.age is string ||
              data.profile.height is string ||
              data.profile.weight is string ||
              data.profile.gender is string ||
              true
            )
        )
        && (!('estimatedMacros' in data)
            || (
              data.estimatedMacros.calories is int &&
              data.estimatedMacros.protein is int &&
              data.estimatedMacros.carbs is int &&
              data.estimatedMacros.fats is int
            )
        )
        && (!('macroWizardCompleted' in data) || data.macroWizardCompleted is bool);
    }

    // Users collection rules
    match /users/{userId} {
      // Helper function: Validate profile structure matches macro wizard schema
      // profile must be a map containing: age, height, weight, gender, activityLevel, goal, allergies, preferences, dietaryRestrictions (all strings)
      function isValidProfile() {
        let profile = request.resource.data.profile;
        // Allow null profile, but if present must be valid map with correct fields
        return profile == null || (
          profile is map
          && profile.keys().hasOnly(['age', 'height', 'weight', 'gender', 'activityLevel', 'goal', 'allergies', 'preferences', 'dietaryRestrictions'])
          && (!('age' in profile) || profile.age is string || profile.age == null)
          && (!('height' in profile) || profile.height is string || profile.height == null)
          && (!('weight' in profile) || profile.weight is string || profile.weight == null)
          && (!('gender' in profile) || profile.gender is string || profile.gender == null)
          && (!('activityLevel' in profile) || profile.activityLevel is string || profile.activityLevel == null)
          && (!('goal' in profile) || profile.goal is string || profile.goal == null)
          && (!('allergies' in profile) || profile.allergies is string || profile.allergies == null)
          && (!('preferences' in profile) || profile.preferences is string || profile.preferences == null)
          && (!('dietaryRestrictions' in profile) || profile.dietaryRestrictions is string || profile.dietaryRestrictions == null)
        );
      }

      // Helper function: Validate estimatedMacros structure
      // estimatedMacros must be a map containing: calories, protein, carbs, fats (all numbers)
      function isValidEstimatedMacros() {
        let macros = request.resource.data.estimatedMacros;
        // Allow null macros, but if present must be valid map with correct fields
        return macros == null || (
          macros is map
          && macros.keys().hasOnly(['calories', 'protein', 'carbs', 'fats'])
          && (!('calories' in macros) || macros.calories is number || macros.calories == null)
          && (!('protein' in macros) || macros.protein is number || macros.protein == null)
          && (!('carbs' in macros) || macros.carbs is number || macros.carbs == null)
          && (!('fats' in macros) || macros.fats is number || macros.fats == null)
        );
      }

      // Helper function: Check if this is a wizard/profile update (for macro form)
      // Allows updating profile, estimatedMacros, and macroWizardCompleted together
      // These fields are NOT restricted - normal users can write them
      function isWizardUpdate() {
        // Check that profile exists and is valid
        // Check that estimatedMacros is valid if present
        // Check that macroWizardCompleted is bool if present
        // Ensure no restricted fields are being modified (profile, estimatedMacros, macroWizardCompleted are NOT restricted)
        return 'profile' in request.resource.data 
          && request.resource.data.profile is map
          && isValidProfile()
          && (!('estimatedMacros' in request.resource.data) || request.resource.data.estimatedMacros == null || isValidEstimatedMacros())
          && (!('macroWizardCompleted' in request.resource.data) || request.resource.data.macroWizardCompleted is bool || request.resource.data.macroWizardCompleted == null)
          && (
            // Ensure no restricted fields are being modified (profile, estimatedMacros, macroWizardCompleted are allowed)
            (!exists(resource) && !request.resource.data.keys().hasAny(['mealPlanFileURL', 'mealPlanStatus', 'role', 'mealPlanDeliveredAt'])) ||
            (exists(resource) && 
              (!('mealPlanFileURL' in request.resource.data) || request.resource.data.mealPlanFileURL == resource.data.mealPlanFileURL) &&
              (!('mealPlanStatus' in request.resource.data) || request.resource.data.mealPlanStatus == resource.data.mealPlanStatus) &&
              (!('role' in request.resource.data) || request.resource.data.role == resource.data.role) &&
              (!('mealPlanDeliveredAt' in request.resource.data) || request.resource.data.mealPlanDeliveredAt == resource.data.mealPlanDeliveredAt)
            )
          );
      }

      // Helper function: Prevent non-admins from modifying restricted fields
      // Note: profile, estimatedMacros, and macroWizardCompleted are NOT restricted - users can write them
      function canModifyRestrictedFields() {
        // Admins can modify any field
        return isAdmin() || (
          // For creates: restricted fields must not be present
          // profile, estimatedMacros, macroWizardCompleted are allowed
          (!exists(resource) && !request.resource.data.keys().hasAny(['mealPlanFileURL', 'mealPlanStatus', 'role', 'mealPlanDeliveredAt'])) ||
          // For updates: restricted fields must not have changed
          // profile, estimatedMacros, macroWizardCompleted can be modified by users
          (exists(resource) && 
            (!('mealPlanFileURL' in request.resource.data) || !('mealPlanFileURL' in resource.data) || request.resource.data.mealPlanFileURL == resource.data.mealPlanFileURL) &&
            (!('mealPlanStatus' in request.resource.data) || !('mealPlanStatus' in resource.data) || request.resource.data.mealPlanStatus == resource.data.mealPlanStatus) &&
            (!('role' in request.resource.data) || !('role' in resource.data) || request.resource.data.role == resource.data.role) &&
            (!('mealPlanDeliveredAt' in request.resource.data) || !('mealPlanDeliveredAt' in resource.data) || request.resource.data.mealPlanDeliveredAt == resource.data.mealPlanDeliveredAt)
          )
        );
      }

      // Read: Users can read their own document, admins can read all
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());

      // Create: Users can only create their own document with valid schema
      // Note: setDoc with merge:true may trigger create if document doesn't exist
      // profile, estimatedMacros, macroWizardCompleted are allowed for normal users
      allow create: if isSignedIn() 
        && isOwner(userId)
        && isValidUserData()
        && hasValidUserFieldTypes()
        && canModifyRestrictedFields();

      // Update: Users can update their own document (with restrictions), admins can update any
      // Note: setDoc with merge:true triggers update if document exists
      // Special handling for wizard/profile updates from macro form
      // profile, estimatedMacros, macroWizardCompleted are NOT restricted - normal users can write them
      allow update: if isSignedIn() && isOwner(userId) && (
        // Admins can update anything
        isAdmin() || (
          // Allow wizard updates (profile + estimatedMacros + macroWizardCompleted from macro form)
          // This validates the exact schema: profile map with specific fields, estimatedMacros map with numbers, macroWizardCompleted bool
          // These fields are NOT restricted - normal users can write them
          (isWizardUpdate() && canModifyRestrictedFields()) ||
          // For other updates, apply full validation
          (canModifyRestrictedFields() && isValidUserData() && hasValidUserFieldTypes())
        )
      );

      // Delete: Users can delete their own document, admins can delete any
      allow delete: if isAdmin() || (isSignedIn() && isOwner(userId));
    }

    // Purchases collection rules
    match /purchases/{purchaseId} {
      // Helper function: Check if purchase belongs to the user
      // Works for both single document reads and queries
      function isPurchaseOwner() {
        return isSignedIn() 
          && resource.data.userId == request.auth.uid;
      }

      // Helper function: Validate purchase document schema
      function isValidPurchaseData() {
        let data = request.resource.data;
        let allowedFields = [
          'userId',
          'planType',
          'status',
          'mealPlanUrl',
          'createdAt',
          'deliveredAt',
          'stripeSessionId',
          'email',
          'amount'
        ];
        
        // Check that required fields exist and all keys are in allowed fields
        return 'userId' in data
          && 'planType' in data
          && 'status' in data
          && data.keys().hasOnly(allowedFields);
      }

      // Helper function: Validate purchase field types
      function hasValidPurchaseFieldTypes() {
        let data = request.resource.data;
        return data.userId is string
          && data.planType is string
          && data.status is string
          && (!('mealPlanUrl' in data) || data.mealPlanUrl is string || data.mealPlanUrl == null)
          && (!('stripeSessionId' in data) || data.stripeSessionId is string || data.stripeSessionId == null)
          && (!('email' in data) || data.email is string || data.email == null)
          && (!('amount' in data) || data.amount is number || data.amount == null)
          && (!('createdAt' in data) || data.createdAt is timestamp || data.createdAt == null)
          && (!('deliveredAt' in data) || data.deliveredAt is timestamp || data.deliveredAt == null);
      }

      // Read: Users can only read their own purchases, admins can read all
      // For queries with where("userId", "==", request.auth.uid), Firestore evaluates
      // this rule against each document. Since all returned documents have
      // resource.data.userId == request.auth.uid, isPurchaseOwner() will be true.
      allow read: if isSignedIn() && (isPurchaseOwner() || isAdmin());

      // Create: Users can only create purchases with their own userId, admins can create any
      allow create: if isSignedIn() 
        && (isAdmin() || request.resource.data.userId == request.auth.uid)
        && isValidPurchaseData()
        && hasValidPurchaseFieldTypes();

      // Update: Users can only update their own purchases, admins can update any
      // Also ensure userId cannot be changed by non-admins
      allow update: if isSignedIn() 
        && (isAdmin() || (isPurchaseOwner() && request.resource.data.userId == resource.data.userId && request.resource.data.userId == request.auth.uid))
        && isValidPurchaseData()
        && hasValidPurchaseFieldTypes();

      // Delete: Users can delete their own purchases, admins can delete any
      allow delete: if isAdmin() || (isSignedIn() && isPurchaseOwner());
    }

    // Plan Update Requests collection rules
    match /planUpdateRequests/{requestId} {
      // Helper function: Check if request belongs to the user
      function isRequestOwner() {
        return isSignedIn() 
          && resource.data.userId == request.auth.uid;
      }

      // Helper function: Validate request document schema
      function isValidRequestData() {
        let data = request.resource.data;
        let allowedFields = ['userId', 'requestText', 'date', 'handled'];
        
        return 'userId' in data
          && 'requestText' in data
          && data.keys().hasOnly(allowedFields);
      }

      // Helper function: Validate request field types
      function hasValidRequestFieldTypes() {
        let data = request.resource.data;
        return data.userId is string
          && data.requestText is string
          && (!('date' in data) || data.date is timestamp || data.date == null)
          && (!('handled' in data) || data.handled is bool || data.handled == null);
      }

      // Read: Users can read their own requests, admins can read all
      allow read: if isSignedIn() && (isRequestOwner() || isAdmin());

      // Create: Users can create requests with their own userId
      allow create: if isSignedIn() 
        && request.resource.data.userId == request.auth.uid
        && isValidRequestData()
        && hasValidRequestFieldTypes();

      // Update: Only admins can update requests (to mark as handled)
      allow update: if isAdmin() && isValidRequestData() && hasValidRequestFieldTypes();

      // Delete: Only admins can delete requests
      allow delete: if isAdmin();
    }

    // Recipes collection rules
    match /recipes/{recipeId} {
      // Read: All signed-in users can read recipes
      allow read: if isSignedIn();

      // Write: Only admins can create/update/delete recipes
      allow write: if isAdmin();
    }

    // Webhook Events collection (for idempotency tracking)
    // This is primarily used by server-side code, but we allow admin writes for completeness
    match /webhook_events/{eventId} {
      // Read: Only admins can read webhook events
      allow read: if isAdmin();

      // Write: Only admins can write webhook events (server-side uses admin SDK which bypasses rules)
      allow write: if isAdmin();
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
